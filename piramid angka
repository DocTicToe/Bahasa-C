#include<stdio.h>
#include<stdlib.h>
#include<math.h>

int main(){
	int m,n,x,y,i,j;
	scanf("%d", &n);
	m = n*2-1;
	for(i = 1; i <= m; i++){
		if(i < n*2-i){
			x = i;
		} else {
			x = n*2-i;
		}
		for(j = 1; j <= m; j++){
			if(j < n*2-j){
			y = j;
			} else {
			y = n*2-j;
			}
			if(x <= y){
				printf("%d", x);
			} else if (x > y) {
				printf("%d", y);
			}
			if(j == m){
				printf("\n");
			} else{
				printf(" ");
			}
		}
	}
	
	return 0;
}
