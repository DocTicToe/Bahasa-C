#include <stdio.h>
#include <stdlib.h>
#include <math.h>

#define N 1000000007
    long int Pangkat(long int x, long int y){
    if(y == 0)
        return 1;
    if(y == 1)
        return x % N;
    long int z = Pangkat(x, y/2);
    z = (z * z) % N;
    if(y % 2 == 0){
        return z;
    } else {
        return (x % N) * z % N;
    }
}

int main()
{
    long int x,y;
    scanf("%ld%ld", &x, &y);

    long int pangkat = Pangkat(x, y);
    printf("%ld", pangkat);
}
